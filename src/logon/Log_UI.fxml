<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="640.0" prefWidth="450.0"
            style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="logon.Log_UI_Controller">
    <children>
        <ImageView layoutX="190.0" layoutY="60.0">
            <image>
                <Image url="@../../image/Login.png"/>
            </image>
        </ImageView>
        <TextField fx:id="usename" layoutX="191.0" layoutY="170.0" prefHeight="50.0" prefWidth="180.0"
                   promptText="输入手机号"/>
        <TextField fx:id="password" layoutX="82.0" layoutY="220.0" prefHeight="50.0" prefWidth="290.0"
                   promptText="输入密码"/>
        <ImageView fitHeight="60.0" fitWidth="290.0" layoutX="82.0" layoutY="479.0">
            <image>
                <Image url="@../../image/LoginBottom.png"/>
            </image>
        </ImageView>
        <CheckBox layoutX="82.0" layoutY="309.0" mnemonicParsing="false" text="自动登录"/>
        <Hyperlink layoutX="220.0" layoutY="306.0" text="忘记密码"/>
        <Hyperlink layoutX="290.0" layoutY="306.0" text="验证码登录"/>
        <CheckBox layoutX="82.0" layoutY="563.0" mnemonicParsing="false" text="同意"/>
        <Hyperlink layoutX="138.0" layoutY="560.0" text="《服务条款》"/>
        <Hyperlink layoutX="220.0" layoutY="560.0" text="《隐私政策》"/>
        <Hyperlink layoutX="299.0" layoutY="560.0" text="《儿童隐私政策》"/>
        <Hyperlink layoutX="208.0" layoutY="404.0" text="注册"/>
        <Button fx:id="loginbutton" layoutX="82.0" layoutY="344.0" mnemonicParsing="false"
                onAction="#loginbuttonOnAction" prefHeight="50.0" prefWidth="290.0"
                style="-fx-background-color: #e53434;" text="登           录" textFill="WHITE"/>
        <MenuButton layoutX="82.0" layoutY="170.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="109.0"
                    text="+86">
            <items>
                <MenuItem mnemonicParsing="false" text="+1"/>
                <MenuItem mnemonicParsing="false" text="+12"/>
            </items>
        </MenuButton>
        <Label layoutX="288.0" layoutY="310.0" text="|"/>
        <Label fx:id="label" layoutX="82.0" layoutY="276.0" style="-fx-background-color: white;" text="用户名或密码错误"
               textFill="#d01b1b" visible="false"/>
        <ImageView fitHeight="67.0" fitWidth="200.0">
            <image>
                <Image url="@../../image/123456.png"/>
            </image>
        </ImageView>
        <Button fx:id="close" layoutX="419.0" mnemonicParsing="false" onAction="#logincolse" prefHeight="4.0"
                prefWidth="20.0" style="-fx-background-color: white;">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@../../image/logcolse.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
